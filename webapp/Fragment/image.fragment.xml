<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="{productName}" class="sapUiContentPadding" placement="Bottom">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button id="closeButton" text="Close" press="handleClosePress"/>
			</Toolbar>
		</footer>
		<Image src="{productURL}" width="17em" tooltip="{productName}" densityAware="false"/>
	</Popover>
</core:FragmentDefinition>